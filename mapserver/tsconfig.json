{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node20",
    "lib": ["ES2024"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "incremental": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
